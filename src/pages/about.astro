---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const team = [
  {
    name: 'John Anderson',
    role: 'Founder & Lead Designer',
    image: 'https://picsum.photos/seed/$(echo $RANDOM)/800/600',
    bio: 'With over 20 years of experience in landscape design, John brings creativity and expertise to every project.'
  },
  {
    name: 'Sarah Martinez',
    role: 'Operations Manager',
    image: 'https://picsum.photos/seed/$(echo $RANDOM)/800/600',
    bio: 'Sarah ensures every project runs smoothly from start to finish, maintaining our high standards of quality.'
  },
  {
    name: 'Mike Thompson',
    role: 'Hardscape Specialist',
    image: 'https://picsum.photos/seed/$(echo $RANDOM)/800/600',
    bio: 'Mike specializes in patios, walkways, and retaining walls with meticulous attention to detail.'
  }
];

const certifications = [
  'Licensed Landscape Contractor',
  'Certified Irrigation Designer',
  'OSHA Safety Certified',
  'EPA Lead-Safe Certified',
  'Fully Insured & Bonded'
];
---

<Layout title="About Us" description="Learn about our team, values, and commitment to exceptional landscaping">
  <Navigation />

  <!-- Hero Section -->
  <section class="relative h-96 flex items-center justify-center bg-primary-700">
    <div class="absolute inset-0 bg-black opacity-40"></div>
    <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('https://picsum.photos/seed/$(echo $RANDOM)/800/600'); mix-blend-mode: overlay;"></div>

    <div class="relative z-10 text-center text-white px-4">
      <h1 class="text-5xl font-bold mb-4">About Us</h1>
      <p class="text-xl text-gray-100">
        Transforming landscapes, building relationships
      </p>
    </div>
  </section>

  <!-- Our Story -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Our Story</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
          <div>
            <img
              src="https://picsum.photos/seed/$(echo $RANDOM)/800/600"
              alt="Our team at work"
              class="rounded-lg shadow-lg"
            />
          </div>

          <div class="space-y-4 text-gray-700 text-lg leading-relaxed">
            <p>
              Founded in 2010, GreenScape Pro began with a simple mission: to create beautiful, sustainable outdoor spaces that enhance our clients' quality of life.
            </p>
            <p>
              What started as a small lawn care business has grown into a full-service landscaping company serving residential and commercial clients throughout the area. Our success is built on a foundation of quality workmanship, reliable service, and genuine care for our clients' vision.
            </p>
            <p>
              Today, we're proud to be one of the most trusted landscaping companies in the region, with hundreds of satisfied clients and a team of dedicated professionals who share our passion for creating exceptional outdoor spaces.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Our Values</h2>
        <p class="text-xl text-gray-600">The principles that guide everything we do</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div class="bg-white p-8 rounded-lg shadow-md text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3">Quality</h3>
          <p class="text-gray-600">
            We never compromise on quality. Every project receives our full attention and expertise.
          </p>
        </div>

        <div class="bg-white p-8 rounded-lg shadow-md text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3">Integrity</h3>
          <p class="text-gray-600">
            Honest communication, transparent pricing, and doing what we say we'll do.
          </p>
        </div>

        <div class="bg-white p-8 rounded-lg shadow-md text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3">Sustainability</h3>
          <p class="text-gray-600">
            Environmentally responsible practices and water-efficient landscape solutions.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Meet Our Team</h2>
        <p class="text-xl text-gray-600">
          Experienced professionals dedicated to your satisfaction
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {team.map((member) => (
          <div class="bg-gray-50 rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-shadow">
            <img
              src={member.image}
              alt={member.name}
              class="w-full h-64 object-cover"
            />
            <div class="p-6">
              <h3 class="text-2xl font-bold text-gray-900 mb-1">{member.name}</h3>
              <p class="text-primary-600 font-semibold mb-3">{member.role}</p>
              <p class="text-gray-600">{member.bio}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Certifications -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Licensed & Certified</h2>
          <p class="text-xl text-gray-600">
            Professional credentials you can trust
          </p>
        </div>

        <div class="bg-white p-8 rounded-lg shadow-md">
          <ul class="space-y-4">
            {certifications.map((cert) => (
              <li class="flex items-center text-lg">
                <svg class="w-6 h-6 text-primary-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
                <span class="text-gray-700">{cert}</span>
              </li>
            ))}
          </ul>

          <div class="mt-8 p-6 bg-primary-50 rounded-lg">
            <p class="text-gray-700">
              <strong>License #:</strong> LC-12345-2024<br>
              <strong>Insurance:</strong> $2M General Liability<br>
              <strong>Workers Comp:</strong> Full Coverage
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-primary-600 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl font-bold mb-4">Work With Professionals You Can Trust</h2>
      <p class="text-xl mb-8 text-primary-100">
        Experience the GreenScape Pro difference
      </p>
      <a
        href="/contact"
        class="inline-block bg-white text-primary-700 px-8 py-4 rounded-lg hover:bg-gray-100 transition-colors font-semibold text-lg"
      >
        Get Your Free Quote
      </a>
    </div>
  </section>

  <Footer />
</Layout>
