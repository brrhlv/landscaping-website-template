---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us" description="Get in touch for a free consultation and quote">
  <Navigation />

  <!-- Hero Section -->
  <section class="relative h-96 flex items-center justify-center bg-primary-700">
    <div class="absolute inset-0 bg-black opacity-40"></div>
    <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('https://picsum.photos/seed/$(echo $RANDOM)/800/600'); mix-blend-mode: overlay;"></div>

    <div class="relative z-10 text-center text-white px-4">
      <h1 class="text-5xl font-bold mb-4">Contact Us</h1>
      <p class="text-xl text-gray-100">
        Let's discuss your landscaping project
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="bg-white p-8 rounded-lg shadow-lg">
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Request a Free Quote</h2>
          <form action="https://formspree.io/f/YOUR_FORM_ID" method="POST" class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">
                Full Name *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition"
                placeholder="John Smith"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
                Email Address *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition"
                placeholder="john@example.com"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">
                Phone Number *
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition"
                placeholder="(555) 123-4567"
              />
            </div>

            <div>
              <label for="address" class="block text-sm font-semibold text-gray-700 mb-2">
                Property Address
              </label>
              <input
                type="text"
                id="address"
                name="address"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition"
                placeholder="123 Main St, City, ST 12345"
              />
            </div>

            <div>
              <label for="service" class="block text-sm font-semibold text-gray-700 mb-2">
                Service Interested In *
              </label>
              <select
                id="service"
                name="service"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition"
              >
                <option value="">Select a service...</option>
                <option value="lawn-care">Lawn Care & Maintenance</option>
                <option value="landscape-design">Landscape Design & Installation</option>
                <option value="hardscaping">Hardscaping Services</option>
                <option value="tree-care">Tree & Shrub Care</option>
                <option value="irrigation">Irrigation Systems</option>
                <option value="seasonal">Seasonal Services</option>
                <option value="other">Other / Multiple Services</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">
                Project Details *
              </label>
              <textarea
                id="message"
                name="message"
                required
                rows="5"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition resize-none"
                placeholder="Tell us about your project, property size, timeline, and any specific needs..."
              ></textarea>
            </div>

            <div>
              <button
                type="submit"
                class="w-full bg-primary-600 text-white py-4 rounded-lg hover:bg-primary-700 transition-colors font-semibold text-lg shadow-md"
              >
                Send Request
              </button>
            </div>

            <p class="text-sm text-gray-500 text-center">
              We typically respond within 24 hours
            </p>
          </form>
        </div>

        <!-- Contact Information -->
        <div class="space-y-8">
          <!-- Contact Cards -->
          <div class="bg-white p-8 rounded-lg shadow-lg">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Get In Touch</h3>

            <div class="space-y-6">
              <!-- Phone -->
              <div class="flex items-start">
                <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0 mr-4">
                  <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 mb-1">Phone</h4>
                  <a href="tel:555-123-4567" class="text-primary-600 hover:text-primary-700 text-lg">
                    (555) 123-4567
                  </a>
                  <p class="text-gray-500 text-sm mt-1">Mon-Fri: 7am-6pm, Sat: 8am-4pm</p>
                </div>
              </div>

              <!-- Email -->
              <div class="flex items-start">
                <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0 mr-4">
                  <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 mb-1">Email</h4>
                  <a href="mailto:info@greenscapepro.com" class="text-primary-600 hover:text-primary-700 text-lg">
                    info@greenscapepro.com
                  </a>
                  <p class="text-gray-500 text-sm mt-1">We'll respond within 24 hours</p>
                </div>
              </div>

              <!-- Address -->
              <div class="flex items-start">
                <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0 mr-4">
                  <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 mb-1">Office</h4>
                  <p class="text-gray-700">
                    123 Garden Street<br>
                    Green City, ST 12345
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Service Areas -->
          <div class="bg-white p-8 rounded-lg shadow-lg">
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Service Areas</h3>
            <p class="text-gray-700 mb-4">
              We proudly serve the following areas and surrounding communities:
            </p>
            <ul class="grid grid-cols-2 gap-2 text-gray-600">
              <li class="flex items-center">
                <svg class="w-4 h-4 text-primary-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Green City
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-primary-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Springfield
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-primary-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Riverside
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-primary-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Oakville
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-primary-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Meadowbrook
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-primary-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Pine Hills
              </li>
            </ul>
            <p class="text-sm text-gray-500 mt-4">
              Don't see your area? <a href="tel:555-123-4567" class="text-primary-600 hover:text-primary-700">Call us</a> to check if we service your location.
            </p>
          </div>

          <!-- Emergency Contact -->
          <div class="bg-primary-600 text-white p-8 rounded-lg shadow-lg">
            <h3 class="text-2xl font-bold mb-3">Emergency Services</h3>
            <p class="mb-4">
              Tree down? Storm damage? We offer 24/7 emergency services for urgent situations.
            </p>
            <a
              href="tel:555-123-4567"
              class="inline-block bg-white text-primary-700 px-6 py-3 rounded-lg hover:bg-gray-100 transition-colors font-semibold"
            >
              Call Emergency Line
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section (Placeholder) -->
  <section class="bg-gray-200 h-96">
    <div class="w-full h-full flex items-center justify-center text-gray-600">
      <div class="text-center">
        <svg class="w-16 h-16 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
        </svg>
        <p class="text-lg font-semibold">Map Placeholder</p>
        <p class="text-sm mt-2">Replace with Google Maps embed or interactive map</p>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
