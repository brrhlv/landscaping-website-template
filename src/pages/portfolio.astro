---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const projects = [
  {
    title: 'Modern Backyard Oasis',
    category: 'Complete Landscape',
    before: 'https://images.pexels.com/photos/1301856/pexels-photo-1301856.jpeg?auto=compress&cs=tinysrgb&w=1920',
    after: 'https://images.pexels.com/photos/1301856/pexels-photo-1301856.jpeg?auto=compress&cs=tinysrgb&w=1920',
    description: 'Transformed an overgrown backyard into a stunning outdoor living space with paver patio, fire pit, and professional landscaping.'
  },
  {
    title: 'Front Yard Curb Appeal',
    category: 'Landscape Design',
    before: 'https://images.pexels.com/photos/1301856/pexels-photo-1301856.jpeg?auto=compress&cs=tinysrgb&w=1920',
    after: 'https://images.pexels.com/photos/1301856/pexels-photo-1301856.jpeg?auto=compress&cs=tinysrgb&w=1920',
    description: 'Enhanced curb appeal with colorful perennial gardens, professional edging, and decorative stone accents.'
  },
  {
    title: 'Paver Patio & Walkway',
    category: 'Hardscaping',
    before: 'https://images.pexels.com/photos/1301856/pexels-photo-1301856.jpeg?auto=compress&cs=tinysrgb&w=1920',
    after: 'https://images.pexels.com/photos/1301856/pexels-photo-1301856.jpeg?auto=compress&cs=tinysrgb&w=1920',
    description: 'Custom paver installation with integrated lighting and seating walls for entertaining.'
  },
  {
    title: 'Commercial Property Upgrade',
    category: 'Commercial',
    before: 'https://images.pexels.com/photos/1301856/pexels-photo-1301856.jpeg?auto=compress&cs=tinysrgb&w=1920',
    after: 'https://images.pexels.com/photos/1301856/pexels-photo-1301856.jpeg?auto=compress&cs=tinysrgb&w=1920',
    description: 'Complete renovation of commercial landscaping with low-maintenance plantings and irrigation system.'
  },
  {
    title: 'Garden Bed Transformation',
    category: 'Planting',
    before: 'https://images.pexels.com/photos/1301856/pexels-photo-1301856.jpeg?auto=compress&cs=tinysrgb&w=1920',
    after: 'https://images.pexels.com/photos/1301856/pexels-photo-1301856.jpeg?auto=compress&cs=tinysrgb&w=1920',
    description: 'Redesigned garden beds with native plants, mulch, and efficient drip irrigation.'
  },
  {
    title: 'Retaining Wall Project',
    category: 'Hardscaping',
    before: 'https://images.pexels.com/photos/1301856/pexels-photo-1301856.jpeg?auto=compress&cs=tinysrgb&w=1920',
    after: 'https://images.pexels.com/photos/1301856/pexels-photo-1301856.jpeg?auto=compress&cs=tinysrgb&w=1920',
    description: 'Multi-tiered retaining wall with integrated lighting and drought-resistant landscaping.'
  }
];
---

<Layout title="Portfolio" description="View our completed landscaping projects and transformations">
  <Navigation />

  <!-- Hero Section -->
  <section class="relative h-96 flex items-center justify-center bg-primary-700">
    <div class="absolute inset-0 bg-black opacity-40"></div>
    <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('https://images.pexels.com/photos/1301856/pexels-photo-1301856.jpeg?auto=compress&cs=tinysrgb&w=1920'); mix-blend-mode: overlay;"></div>

    <div class="relative z-10 text-center text-white px-4">
      <h1 class="text-5xl font-bold mb-4">Our Portfolio</h1>
      <p class="text-xl text-gray-100">
        See the transformations we've created for our clients
      </p>
    </div>
  </section>

  <!-- Portfolio Grid -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Before & After Projects</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Every project tells a story of transformation. Browse our completed projects to see the quality and attention to detail we bring to every job.
        </p>
      </div>

      <div class="space-y-16">
        {projects.map((project) => (
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="p-6 md:p-8">
              <div class="flex items-center justify-between mb-6">
                <div>
                  <h3 class="text-3xl font-bold text-gray-900 mb-2">{project.title}</h3>
                  <span class="inline-block bg-primary-100 text-primary-800 px-3 py-1 rounded-full text-sm font-semibold">
                    {project.category}
                  </span>
                </div>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <!-- Before Image -->
                <div class="relative group">
                  <div class="absolute top-4 left-4 bg-red-600 text-white px-4 py-2 rounded-lg font-bold text-lg shadow-lg z-10">
                    BEFORE
                  </div>
                  <img
                    src={project.before}
                    alt={`${project.title} - Before`}
                    class="w-full h-80 object-cover rounded-lg shadow-md group-hover:scale-105 transition-transform duration-300"
                  />
                </div>

                <!-- After Image -->
                <div class="relative group">
                  <div class="absolute top-4 left-4 bg-primary-600 text-white px-4 py-2 rounded-lg font-bold text-lg shadow-lg z-10">
                    AFTER
                  </div>
                  <img
                    src={project.after}
                    alt={`${project.title} - After`}
                    class="w-full h-80 object-cover rounded-lg shadow-md group-hover:scale-105 transition-transform duration-300"
                  />
                </div>
              </div>

              <p class="text-gray-700 text-lg leading-relaxed">
                {project.description}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-5xl font-bold text-primary-600 mb-2">500+</div>
          <div class="text-gray-600 text-lg">Projects Completed</div>
        </div>
        <div>
          <div class="text-5xl font-bold text-primary-600 mb-2">15+</div>
          <div class="text-gray-600 text-lg">Years Experience</div>
        </div>
        <div>
          <div class="text-5xl font-bold text-primary-600 mb-2">98%</div>
          <div class="text-gray-600 text-lg">Client Satisfaction</div>
        </div>
        <div>
          <div class="text-5xl font-bold text-primary-600 mb-2">24/7</div>
          <div class="text-gray-600 text-lg">Customer Support</div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-primary-600 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl font-bold mb-4">Your Project Could Be Next</h2>
      <p class="text-xl mb-8 text-primary-100">
        Let's create something amazing together
      </p>
      <a
        href="/contact"
        class="inline-block bg-white text-primary-700 px-8 py-4 rounded-lg hover:bg-gray-100 transition-colors font-semibold text-lg"
      >
        Start Your Transformation
      </a>
    </div>
  </section>

  <Footer />
</Layout>
